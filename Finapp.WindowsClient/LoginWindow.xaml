<Window x:Class="Finapp.WindowsClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Log in" Height="184" Width="342" DataContext="{Binding RelativeSource={RelativeSource Self}}" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <Label Margin="0,2,0,2">User name</Label>
            <TextBox x:Name="UserNameBox"  Margin="0,2,0,2"/>
            <Label Margin="0,2,0,2">Password</Label>
            <PasswordBox x:Name="PasswordBox" Margin="0,2,0,2" />
            <Button x:Name="LoginButton" Margin="0,2,0,2" Click="LoginButton_Click">Log in</Button>
        </StackPanel>
    </Grid>
</Window>